<% content_for :body_class, "home-page" %>

<% content_for :canonical do %>
  <%= render "shared/canonical", href: root_url %>
<% end %>

<% provide :social_media_meta_tags do %>
  <%= render "shared/social_media_meta_tags",
              social_url: root_url,
              social_title: setting['meta_title'],
              social_description: setting['meta_description'] %>
<% end %>

<div class="jumbo highlight">
  <div class="row">
    <div class="small-12 medium-11 column pull-left">
      <h2 class="big-text margin-top-30 line-h-3_5"><%= Setting['title_home'] %></h2>
      <p class="medium-text margin-top-30"><%= Setting['sub_title_home'] %></p>
      <p class="medium-text margin-top-30 descrition-home"><%= Setting['description_home'] %></p>
      <br>
      <div class='link-proposal-home'>
        <%= link_to Setting['title_link_home'], Setting['url_link_home'], class: 'button'%>
      </div>
    </div>
  </div>
</div>

<% if feature?("user.recommendations") && (@recommended_debates.present? || @recommended_proposals.present?) %>
  <%= render "recommended",
              recommended_debates: @recommended_debates,
              recommended_proposals: @recommended_proposals %>
  <hr>
<% end %>

<div class="row home-stages">
  <%= link_to Setting['home_title_stages'] , more_info_path , class: 'title-home m-big-title-blue titel-margin-left m-big-title line-h-3_5'%>
</div>
<% cache [locale_and_user_status, @featured_debates, @featured_proposals, 'featured'] do %>
  <main>
    <div class="small-12 column text-center sub-task-home">
      <div class="row">
        <div class="small-12 medium-3 pull-left yellow-border column">
          <p class="blue-text m-big-text"><%= Setting['home_title_stages_1'] %></p>
          <p class="big-p"><%= Setting['home_description_stages_1'] %></p>
          <p class="pull-left big-date "><%= Setting['home_date_stages_1'] %></p>
        </div>
        <div class="small-12 medium-3 pull-left yellow-border column">
          <p class="blue-text m-big-text"><%= Setting['home_title_stages_2'] %></p>
          <p class="big-p"><%= Setting['home_description_stages_2'] %></p>
          <p class="pull-left big-date "><%= Setting['home_date_stages_2'] %></p>
        </div>
        <div class="small-12 medium-3 pull-left yellow-border column">
          <p class="blue-text m-big-text"><%= Setting['home_title_stages_3'] %></p>
          <p class="big-p"><%= Setting['home_description_stages_3'] %></p>
          <p class="pull-left big-date "><%= Setting['home_date_stages_3'] %></p>
        </div>
        <div class="small-12 medium-3 pull-left yellow-border column">
          <p class="blue-text m-big-text"><%= Setting['home_title_stages_4'] %></p>
          <p class="big-p"><%= Setting['home_description_stages_4'] %></p>
          <p class="pull-left big-date "><%= Setting['home_date_stages_4'] %></p>
        </div>
      </div>
    </div>
  </main>
<% end %>
